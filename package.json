{
  "name": "modularize-html",
  "version": "3.0.0",
  "description": "CLI package to create a static website from EJS templates",
  "main": "./bin/cli.js",
  "scripts": {
    "build": "npm run modularize-html build",
    "start": "npm run modularize-html serve",
    "new-page": "npm run modularize-html new-page",
    "create-config": "npm run modularize-html create-config",
    "modularize-html": "node bin/cli.js",
    "dev": "nodemon --exec npm start"
  },
  "bin": "./bin/cli.js",
  "author": "jeroentvb",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeroentvb/modularize-html.git"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "chokidar": "^3.5.1",
    "cssnano": "^4.1.10",
    "cwebp": "^2.0.5",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "fs-extra": "^9.1.0",
    "nodemon": "^2.0.7",
    "postcss": "^8.2.4",
    "sass": "^1.32.5",
    "socket.io": "^3.1.0",
    "terser": "^5.5.1"
  },
  "devDependencies": {},
  "files": [
    "/bin",
    "/scripts"
  ],
  "nodemonConfig": {
    "ignore": [
      "src/*",
      "public/*"
    ]
  },
  "bugs": {
    "url": "https://github.com/jeroentvb/modularize-html/issues"
  },
  "homepage": "https://github.com/jeroentvb/modularize-html#readme",
  "keywords": [
    "modular",
    "html",
    "component",
    "EJS",
    "webp",
    "framework",
    "modular-html"
  ]
}
