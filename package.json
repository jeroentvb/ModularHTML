{
  "name": "modular-html",
  "version": "3.0.0",
  "description": "CLI package to create a static website from EJS templates",
  "main": "./bin/cli.js",
  "scripts": {
    "build": "node scripts/build/build.js",
    "new-page": "node scripts/development/newpage.js",
    "start": "node scripts/development/dev-server.js",
    "create-config": "node scripts/development/create-config.js",
    "dev": "nodemon --exec npm start"
  },
  "bin": "./bin/cli.js",
  "keywords": [
    "modular",
    "html",
    "modular-html",
    "EJS",
    "webp",
    "framework"
  ],
  "author": "jeroentvb",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeroentvb/modularHTML.git"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "chokidar": "^3.5.1",
    "cssnano": "^4.1.10",
    "cwebp": "^2.0.5",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "fs-extra": "^9.1.0",
    "nodemon": "^2.0.7",
    "postcss": "^8.2.4",
    "socket.io": "^3.1.0",
    "terser": "^5.5.1"
  },
  "devDependencies": {},
  "files": [
    "/bin",
    "/scripts"
  ],
  "nodemonConfig": {
    "ignore": [
      "src/*",
      "public/*"
    ]
  }
}
